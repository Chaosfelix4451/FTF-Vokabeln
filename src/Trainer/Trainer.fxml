<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane" alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Trainer.TrainerController">

    <VBox alignment="CENTER" spacing="20.0" StackPane.alignment="CENTER">
        <!-- Anzeige der aktuellen Punkte -->
        <Label fx:id="pointsLabel" maxWidth="Infinity" text="Punkte: 0" wrapText="true" />

        <!-- Dynamischer Vokabel-Container -->
        <VBox fx:id="vocabBox" maxWidth="Infinity" spacing="10" />

        <!-- Navigation -->
        <HBox fx:id="hBoxButtons" alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
            <Button fx:id="backButton" maxWidth="Infinity" text="Zurück zum Menü" HBox.hgrow="ALWAYS" />
            <Button fx:id="nextButton" maxWidth="Infinity" text="Weiter" HBox.hgrow="ALWAYS" />
            <Button fx:id="finishButton" maxWidth="Infinity" text="Vorzeitig beenden" HBox.hgrow="ALWAYS" />
        </HBox>
    </VBox>
    <Pane fx:id="confettiPane" mouseTransparent="true" StackPane.alignment="CENTER" />
</StackPane>
